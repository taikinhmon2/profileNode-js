<div class="container my-3">
    <div class="row g-3">
        {{#each course}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" style="height: 100%;">
                <a href="/course/{{this.slug}}" class="text-decoration-none">
                    <img style="height: 230px;" src={{this.img}} class="card-img-top img-fluid" alt={{this.name}}>
                </a>
                <div class="card-body">
                    <a href="/course/{{this.slug}}" class="text-decoration-none">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>